@model IEnumerable<BulkyBook.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var prod in Model){
        <div class="col-lg-3 col-md-6"> 
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px; solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@prod.ImgUrl" class="card-img-top rounded"/>
                        <div class="card-body">
                            <div class="pl-1 ms-2 mt-2">
                                <p class="card-title h5 text-primary"><b>@prod.Title</b></p>
                                <p class="card-title text-info">@prod.Author</p>
                            </div>
                            <div class="pl-1 ms-2 mt-2">
                                <p class="card-title h5 text-primary"> List Price <strike><b>$@prod.ListPrice.ToString("0.00")</b></strike> </p>
                                <p class="card-title text-info">as low as <b>@prod.Price100.ToString("0.00")</b></p>
                            </div>
                            <div>
                                <a class="btn btn-primary form-control" asp-action="Details" asp-route-id="@prod.Id">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
